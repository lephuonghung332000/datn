rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true;
    }
    match /user/{document} {
     allow delete: if get(/databases/$(database)/documents/user/$(request.auth.uid)).data.isAdmin == true;
    }
    match /ads/{document} {
     allow create: if get(/databases/$(database)/documents/user/$(request.auth.uid)).data.isAdmin == true;
    }
     match /category/{document} {
     allow create: if get(/databases/$(database)/documents/user/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}